# Configuration serveur
PORT=3000
NODE_ENV=development

# Base de données (SQLite par défaut pour le développement local)
DB_PATH=./database.sqlite

# JWT Secret (IMPORTANT: CHANGEZ CETTE VALEUR EN PRODUCTION!)
JWT_SECRET=votre-secret-jwt-super-securise-ici

# Admin credentials (IMPORTANT: CHANGEZ CES VALEURS EN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=votre-mot-de-passe-admin

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Production Frontend URL (à configurer sur Render)
# FRONTEND_URL=https://maisongiel.net

# Sécurité
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Rewards validity (en jours)
REWARD_VALIDITY_DAYS=30

# Supabase (Pour la persistance cloud - OBLIGATOIRE EN PRODUCTION)
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_SERVICE_ROLE_KEY=votre-cle-service-role-secrete
